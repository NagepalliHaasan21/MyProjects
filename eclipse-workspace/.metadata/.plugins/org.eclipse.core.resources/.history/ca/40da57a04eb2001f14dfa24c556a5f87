{
	@Override
	protected void doPost(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException 
	{
		StringBuffer name = encrypt(req.getParameter("name"));
		StringBuffer email = encrypt(req.getParameter("email"));
		StringBuffer mobile = encrypt(req.getParameter("mobile"));
		StringBuffer address = encrypt(req.getParameter("address"));
		StringBuffer city = encrypt(req.getParameter("city"));
		StringBuffer password = encrypt(req.getParameter("password"));
		
